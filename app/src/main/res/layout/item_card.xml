<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivProfilepic"
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:background="@color/translucent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tvProfilename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jennifer Aniston"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivProfilepic"
        />
    <TextView
        android:id="@+id/tvMutualfriends"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="12 amigos en comun"
        app:layout_constraintLeft_toRightOf="@id/ivFriendspic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProfilename"
        app:layout_constraintBottom_toTopOf="@+id/btnAddfriend"
        android:layout_marginHorizontal="10dp"
        />
    <ImageView
        android:id="@+id/ivFriendspic"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@color/translucent"
        app:layout_constraintLeft_toLeftOf="@id/ivProfilepic"
        app:layout_constraintRight_toLeftOf="@id/tvMutualfriends"
        app:layout_constraintTop_toBottomOf="@id/tvProfilename"
        app:layout_constraintBottom_toTopOf="@+id/btnAddfriend"
        />
    <Button
        android:id="@+id/btnAddfriend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="Add Friend"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="@id/ivFriendspic"
        app:layout_constraintRight_toLeftOf="@+id/btnDiscard"
        app:layout_constraintTop_toBottomOf="@id/ivFriendspic"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btnDiscard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/translucent"
        android:text="Discard"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/btnAddfriend"
        app:layout_constraintRight_toRightOf="@id/ivProfilepic"
        app:layout_constraintTop_toBottomOf="@id/tvMutualfriends"
        app:layout_constraintBottom_toBottomOf="parent"
        />







</androidx.constraintlayout.widget.ConstraintLayout>